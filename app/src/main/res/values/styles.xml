<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyAnimationDop" parent="MyAnimation">
        <item name="android:windowAnimationStyle">@style/MyAnimation</item>
    </style>

    <style name="MyAnimation">
        <item name="android:windowEnterAnimation">@anim/anim_in</item>
        <item name="android:windowExitAnimation">@anim/anim_out</item>
    </style>


    <style name="ToggleButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">sans-serif-condensed-light</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="android:textColor">@color/heavy_clouds</item>
        <item name="android:textSize">@dimen/text_size_osnovnie_danie</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TickerViewSmall">
        <item name="android:text">@string/defoult_text_ticer</item>
        <item name="android:textColor">@color/heavy_clouds</item>
        <item name="android:textSize">@dimen/text_size_ticker_small</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TickerViewBig">
        <item name="android:text">@string/defoult_text_ticer</item>
